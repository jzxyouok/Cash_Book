<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/calendar_img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_shouru_type_qita"/>

        <TextView
            android:id="@+id/calendar_txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="一般"
            android:textColor="@color/text_color_33"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/calendar_ed_money"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:gravity="right|bottom"
            android:hint="0.00"
            android:textColor="@color/text_color_99"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_price_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#fff">

            <TextView
                android:id="@+id/calendar_txt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="支付宝"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/calendar_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/calendar_txt_account"
                android:padding="16dp"
                android:text="12月29日"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/calendar_txt_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="16dp"
                android:text="备注"
                android:textColor="@color/blue"/>
        </RelativeLayout>

        <include layout="@layout/include_keyboardview"/>
    </LinearLayout>
</RelativeLayout>