<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">


    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:background="#A6A6A6"/>

    <ImageView
        android:id="@+id/itme_h__img_data"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@id/view_1"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bg_green_circle_smic"/>

    <TextView
        android:id="@+id/item_h__txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_1"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/itme_h__img_data"
        android:text="时间"
        android:textSize="12sp"/>

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/itme_h__img_data"
        android:layout_centerHorizontal="true"
        android:background="#A6A6A6"/>

    <ImageView
        android:id="@+id/item_h__img_time"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/view_2"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/timeline_green"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_h__img_time"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_h_txt_zhichu_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="18:23:25"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/item_h_txt_zhichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出：00.00"
            android:textSize="@dimen/txr_13"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_2"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/item_h__img_time"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_h_txt_shouru_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="18:23:25"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/item_h_txt_shouru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 :收入"
            android:textSize="@dimen/txr_13"/>
    </LinearLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/item_h__img_time"
        android:layout_centerHorizontal="true"
        android:background="#A6A6A6"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/view_3"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/timeline_green"/>
</RelativeLayout>